<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/laystat"
            tools:layout_editor_absoluteY="5dp"
            tools:layout_editor_absoluteX="5dp">
        <TextView
                android:text="Кол-во сообщений: 154"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAllSms"
                android:layout_margin="5dp"/>
        <TextView
                android:text="Отправленно вами: 15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSendSms"
                android:layout_margin="5dp"/>
        <TextView
                android:text="Получено: 100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewInSms"
                android:layout_margin="5dp"/>
        <com.github.mikephil.charting.charts.BarChart
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/statttt"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>